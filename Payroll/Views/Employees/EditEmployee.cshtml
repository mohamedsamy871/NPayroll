@model Payroll.ViewModels.EmployeesData

@{
    ViewData["Title"] = "EditEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditEmployee</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.Name" class="control-label"></label>
                <input asp-for="Employee.Name" class="form-control" />
                <span asp-validation-for="Employee.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.BirthDate" class="control-label"></label>
                <input asp-for="Employee.BirthDate" class="form-control" />
                <span asp-validation-for="Employee.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Address" class="control-label"></label>
                <input asp-for="Employee.Address" class="form-control" />
                <span asp-validation-for="Employee.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Phone" class="control-label"></label>
                <input asp-for="Employee.Phone" class="form-control" />
                <span asp-validation-for="Employee.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Email" class="control-label"></label>
                <input asp-for="Employee.Email" class="form-control" />
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Job Rank</label>
                @Html.DropDownListFor(m => m.Employee.RankId, new SelectList(Model.Rank, "Id", "JobRank"), "Select a Value", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label class="control-label">Select Department</label>
                @Html.DropDownListFor(m => m.Employee.DepartmentId, new SelectList(Model.Departments, "Id", "Name"), "Select Department", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label asp-for="Employee.JoinDate" class="control-label"></label>
                <input asp-for="Employee.JoinDate" class="form-control" />
                <span asp-validation-for="Employee.JoinDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Seniority Level "More 5 years Or More Than 7 years"</label>
                @Html.DropDownListFor(m => m.Employee.IncentiveId, new SelectList(Model.Incentive, "Id", "SeniorityLevel"), "Select a Value", new { @class = "form-control" })
            </div>
            <input type="hidden" value="@ViewBag.empId" asp-for="Employee.Id" />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
