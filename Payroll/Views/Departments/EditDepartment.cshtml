@model Core.Entities.Department

@{
    ViewData["Title"] = "EditDepartment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Editing Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDepartment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Incentive" class="control-label"></label>
                <input asp-for="Incentive" class="form-control" min="0" max="1"/>
                <span asp-validation-for="Incentive" class="text-danger"></span>
            </div>
            <input type="hidden" value="@ViewBag.DepartmentId" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
