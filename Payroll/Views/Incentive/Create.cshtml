@model Core.Entities.Incentive

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Create Incentive</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmpIncentive" class="control-label"></label>
                <input asp-for="EmpIncentive" class="form-control" min="0" max="1"/>
                <span asp-validation-for="EmpIncentive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeniorityLevel" class="control-label"></label>
                <input asp-for="SeniorityLevel" class="form-control" />
                <span asp-validation-for="SeniorityLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
